{
	"manifest_version": 2,
	"name": "Google Chrome Extension starter",
	"description": "Google Chrome Extension webpack starter for Visual Studio Code",
	"version": "1.0",
	"background": {
		"scripts": [
			"background.bundle.min.js"
		],
		"persistent": true
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Click here for page action!",
		"default_popup": "page_action.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"declarativeContent",
		"tabs",
		"https://github.com/robertsi/vscode-chrome-extension-starter/*"
	]
}