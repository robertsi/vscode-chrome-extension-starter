{
	"manifest_version": 2,
	"name": "Google Chrome Extension starter",
	"description": "Google Chrome Extension webpack starter for Visual Studio Code",
	"version": "1.0",
	"background": {
		"scripts": [
			"background.bundle.js"
		],
		"persistent": false
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Click here for page action!",
		"default_popup": "page_action.html"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"contentScript.bundle.js"
			]
		}
	],
	"permissions": [
		"activeTab",
		"declarativeContent",
		"http://*/*",
		"https://*/*"
	]
}