{
	"manifest_version": 2,
	"name": "Google Chrome Extension starter",
	"description": "Google Chrome Extension webpack starter for Visual Studio Code",
	"version": "1.0",
	"background": {
		"page": "background.html",
		"persistent": true
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Click here for page action!",
		"default_popup": "page_action.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": [
		"activeTab",
		"declarativeContent",
		"tabs",
		"https://localhost:8080/*",
		"http://www.24ur.com/*"
	],
	"content_security_policy": "script-src 'self' https://localhost:8080;"
}